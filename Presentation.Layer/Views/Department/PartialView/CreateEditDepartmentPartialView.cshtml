@model DepartmentViewModel

<div class="form-group">
    @*<label class="col-form-label">Code</label>*@
    <label class="col-form-label" asp-for="Code"></label>

    @*<input type="text"  name="Code" class="form-control"  />
    you don't need to select type and name[must be like Model]
    *@
    <input asp-for="Code" class="form-control" />
    @*for client side validation[show errors messages]*@
    <span asp-validation-for="Code" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="DateOfCreation"></label>
    <input asp-for="DateOfCreation" class="form-control" />
    <span asp-validation-for="DateOfCreation" class="text-danger"></span>
</div>
